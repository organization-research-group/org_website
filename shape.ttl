@prefix : <http://orgorgorgorgorg.org/shape#> .
@prefix org: <http://orgorgorgorgorg.org/graph#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

@prefix address: <http://schemas.talis.com/2005/address/schema#> .
@prefix bibo: <http://purl.org/ontology/bibo/> .
@prefix dc: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lode: <http://linkedevents.org/ontology/> .
@prefix orcid: <http://orcid.org/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix viaf: <http://viaf.org/viaf/> .
@prefix wd: <http://www.wikidata.org/entity/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

#-- Shapes for types of readings

:AcademicArticleShape
    a sh:NodeShape ;
    rdfs:label "Academic article" ;
    sh:targetClass bibo:AcademicArticle ;
    sh:property
        :SameAs ,
        :Title ,
        :ShortTitle ,
        :Author ,
        :InJournalIssue ,
        :PageRange ,
        :URI ,
        :DOI ;
	sh:ignoredProperties ( rdf:type bibo:authorList bibo:editorList ) ;
    sh:closed true .

:BookShape
    a sh:NodeShape ;
    rdfs:label "Book" ;
    sh:targetClass bibo:Book ;
    sh:property
        :SameAs ,
        :Title ,
        :ShortTitle ,
        :Edition ,
        :Author ,
        :Editor ,
        :Translator ,
        :Datestring ,
        :Publisher ,
        :ISBN10 ,
        :ISBN13 ,
        :URI ,
        :DOI ;
	sh:ignoredProperties ( rdf:type bibo:authorList bibo:editorList ) ;
    sh:closed true .

#-- Auxiliary node shapes

:ConferenceShape
    a sh:NodeShape ;
    rdfs:label "Conference shape" ;
    sh:targetClass bibo:Conference ;
    sh:property
        :Title ,
        :Place ,
        :Datestring ,
        :Homepage ;
	sh:ignoredProperties ( rdf:type ) ;
    sh:closed true .

:JournalShape
    a sh:NodeShape ;
    rdfs:label "A journal, with published volumes and issues" ;
    sh:targetClass bibo:Journal ;
    sh:property
        :Title ,
        :ShortTitle ,
        :Homepage ,
        :ISSN ;
	sh:ignoredProperties ( rdf:type ) ;
    sh:closed true .

:JournalIssueShape
    a sh:NodeShape ;
    rdfs:label "A journal issue" ;
    sh:targetClass bibo:Issue ;
    sh:property
        :Datestring ,
        :InJournal ,
        :Editor ,
        :Issue ,
        :URI ,
        :Volume ;
	sh:ignoredProperties ( rdf:type bibo:editorList ) ;
    sh:closed true .

:PersonShape
    a sh:NodeShape ;
    rdfs:label "A person" ;
    sh:targetClass foaf:Person ;
    sh:property
        :SameAs ,
        :GivenName ,
        :SuffixName ,
        :Surname ,
        :Publications ,
        :Homepage ,
        :Page ,
        :WorkHomepage ;
	sh:ignoredProperties ( rdf:type ) ;
    sh:closed true .

:ProceedingsShape
    a sh:NodeShape ;
    rdfs:label "Conference proceedings" ;
    sh:targetClass bibo:Proceedings ;
    sh:property
        :Title ,
        :Datestring ,
        :Editor ,
        :DOI ,
        :ISBN10 ,
        :ISBN13 ,
        :URI ,
        :Publisher ;
	sh:ignoredProperties ( rdf:type bibo:editorList ) ;
    sh:closed true .

:PublisherShape
    a sh:NodeShape ;
    rdfs:label "Publisher shape" ;
    sh:targetClass org:Publisher ;
    sh:property
        :SingleName ,
        :Place ;
	sh:ignoredProperties ( rdf:type ) ;
    sh:closed true .


#-- Properties

:Author
    sh:path dc:creator ;
    sh:name "author" ;
    sh:optional true ;
    sh:node :PersonShape ;
    sh:nodeKind sh:IRI .

:Datestring
    sh:path dc:date ;
    sh:name "date" ;
    sh:maxCount 1 ;
    sh:datatype xsd:string .

:DOI
    sh:path bibo:doi ;
    sh:name "DOI" ;
    sh:optional true ;
    sh:datatype xsd:string .

:Edition
    sh:path bibo:edition ;
    sh:name "edition" ;
    sh:optional true ;
    sh:datatype xsd:string .

:Editor
    sh:path bibo:editor ;
    sh:name "editor" ;
    sh:optional true ;
    sh:node :PersonShape ;
    sh:nodeKind sh:IRI .

:GivenName
    sh:path foaf:givenname ;
    sh:name "given name" ;
    sh:maxCount 1 ;
    sh:datatype xsd:string .

:Homepage
    sh:path foaf:homepage ;
    sh:name "homepage" ;
    sh:optional true ;
    sh:nodeKind sh:IRI .

:InJournalIssue
    sh:path dc:isPartOf ;
    sh:name "in issue" ;
    sh:node :JournalIssueShape ;
    sh:nodeKind sh:BlankNodeOrIRI .

:InJournal
    sh:path dc:isPartOf ;
    sh:name "in journal" ;
    sh:node :JournalShape ;
    sh:nodeKind sh:IRI .

:ISBN10
    sh:path bibo:isbn10 ;
    sh:name "ISBN-10" ;
    sh:datatype xsd:string .

:ISBN13
    sh:path bibo:isbn13 ;
    sh:name "ISBN-13" ;
    sh:datatype xsd:string .

:ISSN
    sh:path bibo:issn ;
    sh:name "ISSN" ;
    sh:datatype xsd:string .

:Issue
    sh:path bibo:issue ;
    sh:name "issue" ;
    sh:maxCount 1 ;
    sh:optional true ;
    sh:datatype xsd:string .

:Page
    sh:path foaf:page ;
    sh:name "page" ;
    sh:optional true ;
    sh:nodeKind sh:IRI .

:PageRange
    sh:path bibo:pages ;
    sh:name "page range" ;
    sh:maxCount 1 ;
    sh:datatype xsd:string .

:Place
    sh:path address:localityName ;
    sh:name "place" ;
    sh:maxCount 1 ;
    sh:datatype xsd:string .

:Publisher
    sh:path dc:publisher ;
    sh:name "publisher" ;
    sh:optional true ;
    sh:node ( :PublisherShape :JournalShape ) ;
    sh:nodeKind sh:IRI .

:Publications
    sh:path foaf:publications ;
    sh:name "publiactions" ;
    sh:optional true ;
    sh:nodeKind sh:IRI .

:SameAs
    sh:path owl:sameAs ;
    sh:name "same as" ;
    sh:optional true ;
    sh:nodeKind sh:IRI .

:ShortTitle
    sh:path bibo:shortTitle ;
    sh:name "short title" ;
    sh:optional true ;
    sh:maxCount 1 ;
    sh:datatype xsd:string .

:SingleName
    sh:path foaf:name ;
    sh:name "name" ;
    sh:maxCount 1 ;
    sh:datatype xsd:string .

:SuffixName
    sh:path bibo:suffixName ;
    sh:name "suffix name" ;
    sh:optional true ;
    sh:maxCount 1 ;
    sh:datatype xsd:string .

:Surname
    sh:path foaf:surname ;
    sh:name "surname" ;
    sh:maxCount 1 ;
    sh:datatype xsd:string .

:Title
    sh:path dc:title ;
    sh:name "title" ;
    sh:maxCount 1 ;
    sh:datatype xsd:string .

:Translator
    sh:path bibo:translator ;
    sh:name "translator" ;
    sh:optional true ;
    sh:node :PersonShape ;
    sh:nodeKind sh:IRI .

:URI
    sh:path bibo:uri ;
    sh:name "uri" ;
    sh:datatype xsd:string .

:Volume
    sh:path bibo:volume ;
    sh:name "volume" ;
    sh:maxCount 1 ;
    sh:optional true ;
    sh:datatype xsd:string .

:WorkHomepage
    sh:path foaf:workInfoHomepage ;
    sh:name "homepage" ;
    sh:maxCount 1 ;
    sh:optional true ;
    sh:nodeKind sh:IRI .

