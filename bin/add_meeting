#!/usr/bin/env python3

import os
import re
import sys
import json
from datetime import datetime

BIN_DIR = os.path.dirname(os.path.realpath(__file__))
ROOT_DIR = os.path.join(BIN_DIR, '..')

MEETINGS_FILE = os.path.join(ROOT_DIR, 'meetings.ttl')
READINGS_FILE = os.path.join(ROOT_DIR, 'readings.ttl')

meeting_ttl_template = '''
:meeting:{date}
    a :Meeting ;
    lode:atTime [
        a time:Interval ;
        time:hasBeginning [
            a time:Instant ;
            time:inXSDDateTimeStamp "{date}T10:00:00-0{offset}:00"^^xsd:dateTimeStamp
        ]
    ]'''

involved_ttl_template = ''' ;
    lode:involved {readings}'''

schedule_ttl_template = ''' ;
    :schedule (
        {schedule}
    )'''

reading_ttl_template = '''
{key}
    # FILLME: Update the details of this entry.
    # Added automatically for meeting on {date}
    a :Reading .
'''

print()

try:
    while True:
        date_input = input('\033[1mDate\033[0m (yyyy-mm-dd)\n\n-> ').strip()

        try:
            date = datetime.strptime(date_input, '%Y-%m-%d')
        except ValueError:
            print('\nWrong date format, try again\n')
            continue
        print('''
\033[1mSchedule\033[0m

Add entries for this meeting's schedule, one item a time.

Cite items with an identifier consisting of an '@' symbol, the first word of
the first author's family name followed by the year, like @Buckland1994 or
@Suchman1995.

Add arbitrary HTML by just typing a string.
''')

        _in = None

        schedule_input = []

        while _in != '':
            _in = input('-> ').strip()
            if (_in):
                schedule_input.append(_in)

        cites = []
        schedule = []

        for item in schedule_input:
            if item[0] == '@' and ' ' not in item:
                cite = ':reading:' + item[1:]
                cites.append(cite)
                schedule.append(cite)
            else:
                schedule.append('[ dc:description {} ]'.format(
                    json.dumps(item)))

        # Build meeting TTL
        meeting_ttl = meeting_ttl_template.format(
            date=date_input,
            offset=4 if date.timetuple().tm_isdst > 0 else 5)

        if cites:
            meeting_ttl += involved_ttl_template.format(
                readings=', '.join(cites)
            )

        if schedule:
            meeting_ttl += schedule_ttl_template.format(
                schedule='\n        '.join(schedule)
            )

        meeting_ttl += ' .\n'

        # Build readings TTL
        readings_ttl = ''
        for cite in cites:
            readings_ttl += reading_ttl_template.format(
                key=cite,
                date=date_input)

        print('\n==== meetings.ttl ====')
        print(meeting_ttl)
        if readings_ttl:
            print('==== readings.ttl ====')
            print(readings_ttl)
        print('====\n')

        keep = input(
            '\033[1mAdding these statements. '
            'Press Ctrl-c to cancel.\033[0m')

        # Update meetings.ttl
        with open(MEETINGS_FILE, 'r') as fp:
            meetings_content = fp.read()

        # Find the last meeting entry in the :ORG-UNC :meeting list and add new one
        # Pattern matches the last meeting in the list (ends with " .")
        pattern = re.compile(r'(:meeting:\d{4}-\d{2}-\d{2}) \.')
        matches = list(pattern.finditer(meetings_content))
        if matches:
            # Find the one in the :ORG-UNC block (within first ~500 lines)
            # The :ORG-UNC block's meeting list comes before individual meeting definitions
            org_block_end = meetings_content.find(':meeting:2015-07-24\n    a :Meeting')
            for match in matches:
                if match.start() < org_block_end:
                    last_match = match

            # Replace "last_meeting ." with "last_meeting ,\n        :meeting:new_date ."
            old_text = last_match.group(0)
            new_text = last_match.group(1) + ',\n        :meeting:' + date_input + ' .'
            meetings_content = meetings_content[:last_match.start()] + new_text + meetings_content[last_match.end():]

        # Append the new meeting definition
        meetings_content = meetings_content.rstrip() + '\n' + meeting_ttl

        with open(MEETINGS_FILE, 'w') as fp:
            fp.write(meetings_content)

        # Update readings.ttl if there are new readings
        if readings_ttl:
            with open(READINGS_FILE, 'a') as fp:
                fp.write(readings_ttl)

        print(f'\nUpdated {MEETINGS_FILE}')
        if readings_ttl:
            print(f'Updated {READINGS_FILE}')


except (EOFError, KeyboardInterrupt):
    print('')
    sys.exit(0)
